    function getDate( date )
    {
        if(date.match("Q1"))
        {
            date = date.replace("Q1","01"); 
        }
        else if(date.match("Q2"))
        {
            date = date.replace("Q2","04"); 
        }
        else if(date.match("Q3"))
        {
            date = date.replace("Q3","07"); 
        }
        else if(date.match("Q4"))
        {
            date = date.replace("Q4","10"); 
        }
        date = date +"-01";
        
        var date1= new Date(date);
        
        return date1;
        
